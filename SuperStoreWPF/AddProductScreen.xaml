<Window x:Class="SuperStoreWPF.AddProductScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperStoreWPF"
        mc:Ignorable="d"
        Title="AddProductScreen" Height="300" Width="300">
    <Grid>
        <TextBox Name="nameInput" HorizontalAlignment="Left" Height="23" Margin="32,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="priceInput"  HorizontalAlignment="Left" Height="23" Margin="32,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="amountInput" HorizontalAlignment="Left" Height="23" Margin="32,188,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Product Name" HorizontalAlignment="Left" Margin="32,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="32,95,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.333,0.695"/>
        <Label Content="Amount in stock" HorizontalAlignment="Left" Margin="32,162,0,0" VerticalAlignment="Top"/>
        <Button Name="AddProduct" Content="Add Product" HorizontalAlignment="Left" Margin="32,230,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
