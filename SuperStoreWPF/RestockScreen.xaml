<Window x:Class="SuperStoreWPF.RestockScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperStoreWPF"
        mc:Ignorable="d"
        Title="RestockScreen" Height="300" Width="300">
    <Grid>
        <Label Content="Choose an item" HorizontalAlignment="Left" Margin="90,54,0,0" VerticalAlignment="Top" Width="100"/>
        <Label Content="Amount to restock" HorizontalAlignment="Left" Margin="90,123,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ProductList" HorizontalAlignment="Left" Margin="90,80,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="AmountInput" HorizontalAlignment="Left" Height="23" Margin="90,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="RestockButton" Content="Restock!" HorizontalAlignment="Left" Margin="90,212,0,0" VerticalAlignment="Top" Width="75" Click="RestockButton_Click"/>

    </Grid>
</Window>
